{
  "name": "violeta-reed",
  "description": "",
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^15.12.1",
    "@contentful/rich-text-types": "^15.12.1",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "classnames": "^2.3.1",
    "graphql-request": "^4.2.0",
    "normalize.css": "^8.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-intl": "^5.25.1",
    "remix": "^1.4.3"
  },
  "devDependencies": {
    "@formatjs/cli": "^4.8.4",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/import-types-preset": "^2.1.15",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typed-document-node": "^2.2.8",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "license": "COPYRIGHT",
  "private": true,
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "build:js": "remix build",
    "dev": "concurrently --names \"CSS,JS\" --prefix-colors \"red,blue\" \"npm run dev:css\" \"npm run dev:js\"",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "dev:js": "remix dev",
    "format": "npm run format:ci -- --write",
    "format:ci": "prettier --ignore-path .gitignore -l \"**/*.+(js|json|md|yml)\"",
    "generate:graphql": "rm -rf ./app/.graphql && graphql-codegen",
    "generate:translations": "formatjs extract \"app/**/*.ts*\" --format simple --ignore=\"**/*.d.ts\" --out-file=\"translations/es.json\"",
    "lint": "eslint \"app/**/*.{ts,tsx}\" --fix",
    "lint:ci": "npm run lint -- --max-warnings 0",
    "prepare": "npm run generate:graphql && npm run build:css && husky install",
    "start": "remix-serve build"
  },
  "sideEffects": false
}
