{
  "name": "violeta-reed",
  "description": "",
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^16.1.2",
    "@contentful/rich-text-types": "^16.3.0",
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "@remix-run/serve": "^2.0.0",
    "accept-language": "^3.0.18",
    "classnames": "^2.3.2",
    "graphql-request": "^6.1.0",
    "isbot": "^3.6.13",
    "lru-cache": "^10.0.1",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.6"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.1.5",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/import-types-preset": "^2.2.6",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@remix-run/dev": "^2.0.0",
    "@remix-run/eslint-config": "^2.0.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.1",
    "deepmerge": "^4.3.1",
    "eslint": "^8.49.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=14"
  },
  "license": "COPYRIGHT",
  "private": true,
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -m -o ./app/tailwind.css",
    "build:js": "remix build",
    "dev": "concurrently --names \"CSS,JS\" --prefix-colors \"red,blue\" \"npm run dev:css\" \"npm run dev:js\"",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "dev:js": "remix dev",
    "format": "npm run format:ci -- --write",
    "format:ci": "prettier --ignore-path .gitignore -l \"**/*.+(js|json|md|yml)\"",
    "generate:graphql": "rm -rf ./app/.graphql && graphql-codegen",
    "generate:translations": "formatjs extract \"app/**/*.ts*\" --format simple --ignore=\"**/*.d.ts\" --out-file=\"app/translations/es.json\"",
    "lint": "eslint \"app/**/*.{ts,tsx}\" --fix",
    "lint:ci": "npm run lint -- --max-warnings 0",
    "start": "remix-serve build"
  },
  "sideEffects": false
}
